<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.WishList_Fragment">

    <androidx.appcompat.widget.Toolbar
        android:background="#489E67"
        android:id="@+id/Toolbar_WishList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/listViewWishlist"
        android:layout_below="@id/Toolbar_WishList"
        android:layout_above="@id/bt_addAllCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/bt_addAllCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_button_green"
        android:text="Thêm tất cả vào giỏ hàng"
        android:textSize="15dp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

</RelativeLayout>