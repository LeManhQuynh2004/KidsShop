<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/nam" />

    <EditText
        android:id="@+id/edt_User_Login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edt_login"
        android:hint="Tên Đăng Nhập"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">


    <EditText
        android:id="@+id/edt_pass_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edt_login"
        android:hint="Mật khẩu"
        android:padding="10dp"
        />
        <TextView
            android:id="@+id/show_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:text="Hiển thị"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            />

    </FrameLayout>
    <Spinner
        android:id="@+id/spn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <CheckBox
        android:id="@+id/remember_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu mật khẩu"
        android:textColor="#2196f3"
        android:textColorHint="#2196f3"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Đăng Nhập"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/btn_login"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/tv_forgot_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textSize="19dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#2196f3"
        />
</LinearLayout>