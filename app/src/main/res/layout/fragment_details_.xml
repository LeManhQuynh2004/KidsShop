<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Details_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/layoutFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_details"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/productimg" />

            <ImageView
                android:id="@+id/bt_back_home"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back"
                android:layout_width="25dp"
                android:layout_height="20dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_Quantity_CartItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/orange"
                    android:padding="2dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_send_bag"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/shopping" />
            </FrameLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutFrame"
            android:orientation="vertical"
            android:padding="7dp">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_details_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product name"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                  <ImageView
                      android:id="@+id/img_wishlist"
                      android:src="@drawable/heart"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/bt_signal_details"
                        android:text="-"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:id="@+id/tv_quantity_details"
                        android:background="@drawable/background_quantity_cartitem"
                        android:text="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:id="@+id/bt_sum_quantity_details"
                        android:text="+"
                        android:textColor="@color/blue"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_price_details_product"
                    android:text="$4.99"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Mô tả sản phẩm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:text="Apples are nutritious. Apples may be good for weight loss. apples may be good for your heart. As part of a healtful and varied diet."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                app:backgroundTint="@null"
                android:textStyle="bold"
                android:textSize="17sp"
                android:background="@drawable/background_button_green"
                android:id="@+id/bt_addCartItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Thêm vào rỏ hàng" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Đánh giá"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Xem tất cả >"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>